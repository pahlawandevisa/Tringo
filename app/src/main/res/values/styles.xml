<resources xmlns:tools="http://schemas.android.com/tools">

  <!-- Base application theme -->
  <style name="TringoBase" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="Tringo" parent="TringoBase" />

  <!-- Theme for filter container -->
  <style name="Tringo.FilterContainer" parent="ThemeOverlay.AppCompat.Light">
    <item name="android:background">@color/lightGrey</item>
  </style>

  <style name="Tringo.Filter">
    <item name="android:layout_gravity">center</item>
    <item name="android:layout_margin">4dp</item>
    <item name="android:background">@drawable/filter_background</item>
    <item name="android:textSize">12sp</item>
    <item name="android:textAllCaps">true</item>
  </style>
</resources>
