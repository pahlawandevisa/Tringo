<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardElevation="2dp"
    app:cardCornerRadius="4dp">

  <!-- set one fixed dimension and let Android set the other for getting the most perfect image! -->
  <ImageView
      android:id="@+id/movie_poster"
      android:layout_width="wrap_content"
      android:layout_height="@dimen/poster.height"
      android:scaleType="fitXY"
      android:adjustViewBounds="true"
      tools:src="@color/colorAccent"
      android:transitionName="@string/tranistion.shared.movie_poster"
      android:contentDescription="@string/desc.movie_poster" />
</android.support.v7.widget.CardView>